<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:background="@drawable/fragment_im_background">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fragment_im_match_image"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ja"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/fragment_im_match_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/doop"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separatorsDark" />
</LinearLayout>