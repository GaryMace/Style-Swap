<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/login_grey">

    <Button
        android:text="Match Type"
        android:layout_below="@+id/settingsbutton1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/settingsbutton2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/circlebutton"
        android:textSize="18sp" />

    <Button
        android:text="Profile Details"
        android:layout_marginTop="40dp"
        android:id="@+id/settingsbutton3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/circlebutton"
        android:textSize="18sp"
        android:layout_below="@+id/settingsbutton2"
        android:layout_alignLeft="@+id/settingsbutton2"
        android:layout_alignStart="@+id/settingsbutton2" />

    <Button
        android:text="Delete Account"
        android:layout_marginTop="40dp"
        android:id="@+id/settingsbutton4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/circlebutton"
        android:textSize="18sp"
        android:layout_below="@+id/settingsbutton3"
        android:layout_alignLeft="@+id/settingsbutton3"
        android:layout_alignStart="@+id/settingsbutton3" />

    <Button
        android:text="LOG OUT"
        android:id="@+id/settingsbutton1"
        android:layout_height="75dp"
        android:layout_width="350dp"
        android:background="@android:color/holo_blue_bright"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textSize="30sp"
        tools:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/settingsbutton1"
        android:layout_alignStart="@+id/settingsbutton1"
        android:id="@+id/settingsbutton5"
        android:background="?attr/actionModeCloseDrawable"/>

</RelativeLayout>
